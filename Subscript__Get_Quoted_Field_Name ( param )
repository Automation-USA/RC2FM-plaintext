If [IsEmpty ( Get ( ScriptParameter ) )]
	Exit Script [958]
End If
#
Set Variable [$fieldRef; Value:Get ( ScriptParameter )]
Exit Script [Let( [
	_fieldRef = If( PatternCount( $fieldRef ; "::" ) = 0 ; GetFieldName( $fieldRef ) ; $fieldRef ) ;
	_split = Substitute ( _fieldref ; "::"; "Â¶") ;
	_field = GetValue( _split ; 2 )
	];

	Quote( _field )
)

